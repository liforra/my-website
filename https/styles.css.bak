body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #121212;
    color: #e0e0e0;
}

.profile-container {
    background-color: #1e1e1e;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
    text-align: center;
    width: 300px;
    position: relative;
    overflow: hidden; /* Ensure the profile picture stays within the container */
    padding-top: 80px; /* Adjusted to add space for the banner and profile picture */
}

.banner {
    position: absolute;
    top: 0;
    width: 100%;
    height: 150px; /* Adjust the height as needed */
    overflow: hidden;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.profile-picture {
    position: absolute;
    top: 100px; /* Adjust top position as needed */
    left: 50%;
    transform: translateX(-50%);
    background-color: #1e1e1e;
    border-radius: 50%;
    padding: 5px;
    border: 2px solid #1e1e1e;
}

.profile-picture img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    border: 2px solid #e0e0e0;
}

.social-media-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 120px; /* Adjusted to accommodate the profile picture */
}

.social-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #e0e0e0;
    font-size: 18px;
}

.social-link img {
    width: 24px;
    height: 24px;
    margin-right: 10px;
}

